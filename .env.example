# Copy this to .env and fill in with your actual values
# PythonAnywhere will set these as web app environment variables

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourname.pythonanywhere.com,www.yourname.pythonanywhere.com

# Email Configuration (for contact form)
# Using Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password  # Use Gmail App Password, not regular password
RECIPIENT_ADDRESS=your-email@gmail.com

# Alternatively, use SendGrid or similar service
# EMAIL_BACKEND=sendgrid_backend.SendgridBackend
# SENDGRID_API_KEY=your-api-key
