# Copy this to .env and fill in with your actual values
# PythonAnywhere will set these as web app environment variables

# Django Settings
SECRET_KEY=your-secret-key-here-min-50-chars
DEBUG=False
ALLOWED_HOSTS=yourname.pythonanywhere.com,www.yourname.pythonanywhere.com,localhost,127.0.0.1

# Database Configuration
# Default is SQLite, for production use PostgreSQL or MySQL
# DATABASE_URL=postgresql://user:password@localhost:5432/leumasp
# DATABASE_URL=mysql://user:password@localhost/leumasp

# Email Configuration (for contact form & newsletters)
# Using Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password  # Use Gmail App Password, not regular password
RECIPIENT_ADDRESS=your-email@gmail.com

# REST API Configuration
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,http://localhost:3000
API_PAGE_SIZE=10

# Error Tracking with Sentry (Optional - for production monitoring)
SENTRY_DSN=

# Static & Media Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# Security Settings (for production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Caching (for production, use Redis)
CACHE_BACKEND=locmem
CACHE_LOCATION=unique-snowflake

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Alternative Email Backends
# SendGrid
# EMAIL_BACKEND=sendgrid_backend.SendgridBackend
# SENDGRID_API_KEY=your-api-key

# Console (for development)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
