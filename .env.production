# Production Environment Configuration

# Django Settings
DEBUG=False
SECRET_KEY=${SECRET_KEY}
ALLOWED_HOSTS=${ALLOWED_HOSTS}
ENVIRONMENT=production

# Database
DATABASE_URL=${DATABASE_URL}
DB_ENGINE=django.db.backends.postgresql
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_HOST=${DB_HOST}
DB_PORT=5432

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_SECURITY_POLICY=True
X_FRAME_OPTIONS=DENY

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/home/leumas/mysite/static/
MEDIA_URL=/media/
MEDIA_ROOT=/home/leumas/mysite/media/

# Cache
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://localhost:6379/1

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=${EMAIL_HOST}
EMAIL_PORT=${EMAIL_PORT}
EMAIL_USE_TLS=True
EMAIL_HOST_USER=${EMAIL_HOST_USER}
EMAIL_HOST_PASSWORD=${EMAIL_HOST_PASSWORD}

# Sentry Error Tracking
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# CORS Settings
CORS_ALLOWED_ORIGINS=${CORS_ALLOWED_ORIGINS}

# AWS S3 (if using for static/media)
USE_S3=False
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_STORAGE_BUCKET_NAME=${AWS_STORAGE_BUCKET_NAME}

# Analytics
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}

# API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}

# Site Configuration
SITE_NAME=Leumas Portfolio
SITE_URL=https://leumas.pythonanywhere.com
CONTACT_EMAIL=${CONTACT_EMAIL}

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/leumas/django.log
